#!/bin/sh

if [[ "$1" == win* ]]; then 
    ZLIB="\\\\\\\\code/zlib"
    MYDEFS="/D WITHGZS"
    RELOPTS="/O2 /I ${ZLIB} ${MYDEFS} /EHsc /D NDEBUG /Gd /GF /MT"
    DBGOPTS="/EHsc /I ${ZLIB} ${MYDEFS} /D _DEBUG /Gd /GF /MTd /W4 /wd4996"
    RELLINK="${ZLIB}/zlib.lib /MACHINE:AMD64"
    DBGLINK="${ZLIB}/zlib.lib /NODEFAULTLIB:LIBCMT /MACHINE:AMD64"
    CC="cl"
    CPP="cl"
    LD="link"
else
    GCCV=`gcc -dumpversion`
    GV=`echo $GCCV | sed -e 's/\.\([0-9][0-9]\)/\1/g' -e 's/\.\([0-9]\)/0\1/g' -e 's/^[0-9]\{3,4\}$/&00/'`

    if [ $GV -ge "40700" ] ; then
        CPPFLAGS="-std=c++11"
    else
        if [ $GV -ge "40400" ] ; then
            CPPFLAGS="-std=c++0x"
        fi
    fi
    RELOPTS="${CFLAGS} -O2 -DNDEBUG -Wno-deprecated -I."
    DBGOPTS="${CFLAGS} -O2 -DDEBUG -g -I."
    RELLINK="-lz"
    DBGLINK="-lz"
    CC="gcc"
    CPP="g++"
    LD="g++"
fi

if [[ "$1" == *debug ]]; then 
    CC_OPTS="${DBGOPTS}"
    LINK_OPTS="${DBGLINK}"
else
    CC_OPTS="${RELOPTS}"
    LINK_OPTS="${RELLINK}"
fi 

echo "CC=$CC" > makefile.incl
echo "CFLAGS=$CFLAGS" >> makefile.incl

