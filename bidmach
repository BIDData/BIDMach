#!/bin/bash
# export JAVA_HOME="" # Set here if not set in environment
# export CUDA_PATH="" # Set here if not set in environment

MEMSIZE="-Xmx14G"
BIDMACH_ROOT="${BASH_SOURCE[0]}"
if [ ! `uname` = "Darwin" ]; then
  BIDMACH_ROOT=`readlink -f "${BIDMACH_ROOT}"`
else
  while [ -L "${BIDMACH_ROOT}" ]; do
    BIDMACH_ROOT=`readlink "${BIDMACH_ROOT}"`
  done
fi
BIDMACH_ROOT=`dirname "$BIDMACH_ROOT"`
pushd "${BIDMACH_ROOT}"  > /dev/null
BIDMACH_ROOT=`pwd -P`
BIDMACH_ROOT0="$( echo ${BIDMACH_ROOT} | sed 's+^/cygdrive/\(.\)+\1:+' )"
BIDMACH_ROOT="$( echo ${BIDMACH_ROOT0} | sed 's+^/mnt/\(.\)+\1:+' )"

LIBDIR="${BIDMACH_ROOT}/lib"

LOGGING_CONF="${BIDMACH_ROOT}/conf/logging.conf"
if [ -e "${LOGGING_CONF}" ]; then
    LOG_OPTS="-Djava.util.logging.config.file=${LOGGING_CONF}"
else
    LOG_OPTS=""
fi
export JAVA_OPTS="${MEMSIZE} -Xms128M -Dfile.encoding=UTF-8 ${LOG_OPTS} ${JAVA_OPTS}" # Set as much memory as possible

BIDMAT_VERSION=`echo lib/BIDMat-*-cpu-*.jar | sed 's/.*BIDMat-//' | sed 's/-cpu.*\.jar//'`

OSS=`uname -a`
if [ "$ARCH" = "" ]; then
    ARCH=`arch`
fi
if [[ "$OSS" == Darwin* ]] ; then
    if [[ "$OSS" == *x86_64 ]] ; then
	    ARCH="x86_64"
    fi
    OSS="apple"
elif [[ "$OSS" == Linux* ]] ; then
    OSS="linux"
elif [[ "$OSS" == CYGWIN* ]] ; then
    if [[ "$OSS" == *WOW* ]] ; then
        ARCH="x86_64"
    fi
	OSS="windows"
else
    echo "OS not supported" $OSS
    exit 1
fi

if [ "$OSS" = "windows" ]; then
    if [ ! "${JAVA_HOME}" = "" ]; then
        JAVA_HOME=`${BIDMACH_ROOT}/shortpath.bat "${JAVA_HOME}"`
	    export JAVA_HOME=`echo ${JAVA_HOME} | sed 's_\\\\_/_g'`/bin
    fi
fi

cd lib
BIDMACH_JARS=`echo *.jar`
BIDMACH_LIBS="${BIDMACH_ROOT}/target/BIDMach-${BIDMAT_VERSION}.jar"
for lib in ${BIDMACH_JARS}; do
    BIDMACH_LIBS="${BIDMACH_LIBS};${LIBDIR}/${lib}"
done

popd > /dev/null

TOOL_LIBS="${BIDMACH_ROOT}/conf;${JAVA_HOME}/lib/tools.jar"

ALL_LIBS="${TOOL_LIBS};${BIDMACH_LIBS}"

if [ "$OSS" = "windows" ]; then
    if [ ! "${CUDA_PATH}" = "" ]; then
	    NEWPATH=`${BIDMACH_ROOT}/shortpath.bat "${CUDA_PATH}"`
	    NEWPATH=`echo $NEWPATH | sed 's_\\\\_/_g'`/bin
    fi
else
    TOOL_LIBS=`echo "${TOOL_LIBS}" | sed 's/;/:/g'`
    ALL_LIBS=`echo "${ALL_LIBS}" | sed 's/;/:/g'`
fi

userargs=""
if [ "$2" != "" ]; then
    userargs="-Duser.arg0=$2"
    j=1;
    for i in ${*:3}; do
	userargs="$userargs -Duser.arg$j=$i"
	j=$((j+1))
    done
fi

if [ "$1" = "notebook" ]; then
    shift 1
    if [ ! -z "$@" ]; then
	ARGSTR=", \"$@\""
    else
	ARGSTR=""
    fi
    KERNEL_CMD="[\"java\", \"-noverify\", \"-Xms128M\", \"${MEMSIZE}\", \"-Dfile.encoding=UTF-8\", 
                 \"-jar\", \"${BIDMACH_ROOT0}/launcher.jar\", \"launch\", 
                 \"-r\", \"sonatype:releases\", \"-r\", \"sonatype:snapshots\", 
                 \"-r\", \"http://dl.bintray.com/biddata/BIDData\", \"-i\", \"ammonite\",
                 \"-I\", \"ammonite:org.jupyter-scala:ammonite-runtime_2.11.11:0.8.3-1\",
                 \"-I\", \"ammonite:org.jupyter-scala:scala-api_2.11.11:0.4.2\",
                 \"-I\", \"ammonite:BIDMach:BIDMach:${BIDMACH_VERSION}\",
                 \"org.jupyter-scala:scala-cli_2.11.11:0.4.2\", \"-M\", \"jupyter.scala.JupyterScala\",  \"--\", 
                 \"--id\", \"scala\", \"--name\", \"Scala\", \"--connection-file\", \"{connection_file}\"${ARGSR}]"
    ipython notebook --profile=scala --KernelManager.kernel_cmd="$KERNEL_CMD"
else
    echo ${ALL_LIBS}
    ${BIDMACH_ROOT}/scripts/scala/scala -Dscala.repl.maxprintstring=8000 ${userargs} -nobootcp -toolcp "${ALL_LIBS}" -cp "${ALL_LIBS}" -Yrepl-sync -i ${LIBDIR}/bidmach_init.scala  ${1}
fi
